
<div tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Welcome, please sign in!</h5><br>
      </div>
      <div class="modal-body">
        <%= render partial: "shared/errors" %>
        <%= form_tag({}, {method: :post}) do %>
          <div class="form-group">
            <%= label_tag :email %>
            <%= text_field_tag :email, "", class: "form-control", style: "width: 250px" %> <br>
          </div>

          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, "", class: "form-control", style: "width: 250px" %> <br>
          </div>

          <div class="modal-footer">
            <%= submit_tag "Login", class: "btn btn-primary" %>
            <%= link_to "Create an account", new_user_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

