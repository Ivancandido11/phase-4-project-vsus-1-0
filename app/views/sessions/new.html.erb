<h1>Welcome, please sign in!</h1>

<p><%= flash[:error] %></p>

<%= form_tag({}, {method: :post}) do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %> <br><br>

  <%= label_tag :password %>
  <%= password_field_tag :password %> <br><br>

  <%= submit_tag "Login" %>
<% end %>

<%= link_to "Create an account", new_user_path %>
