<h1>Create an account</h1>

<div>
  <%= form_for @user do |form| %>
    <%= form.label :username %>
    <%= form.text_field :username %> <br><br>

    <%= form.label :email %>
    <%= form.email_field :email %> <br><br>

    <%= form.label :password %>
    <%= form.password_field :password %> <br><br>

    <%= form.label "Confirm Password" %>
    <%= form.password_field :password_confirmation %> <br><br>

    <%= form.label "Profile Photo" %>
    <%= form.file_field :avatar %> <br><br>

    <%= form.submit %>
  <% end %>
</div>