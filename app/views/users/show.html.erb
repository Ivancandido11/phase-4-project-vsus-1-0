<h1><%= @user.username %></h1> <br><br>

<div>
  <% if Current.user.avatar.attached? %>
    <%= image_tag(Current.user.avatar, alt: "profile-icon", style: "height: 150px;width: 150px;") %>
  <% else %>
    <%= image_tag("profile-icon.png", alt: "profile-icon", style: "height: 150px;width: 150px;") %>
  <% end %>
</div> <br><br>

<p><%= @user.email %></p>

<%= button_to "Edit Profile", edit_user_path(Current.user), method: :get %>