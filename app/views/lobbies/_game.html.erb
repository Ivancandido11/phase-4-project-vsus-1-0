<table class="table table-hover" style="width: fit-content;">
  <thead class="thead-dark">
    <tr>
      <td scope="col">Username</td>
    </tr>
  </thead>
  <tbody>
    <% players.each do |player| %>
      <% if player == lobby.host %>
        <tr class="bg-primary">
          <td class="text-light">Host <%= player.username %></td>
        </tr>
      <% else %>
        <tr>
          <td scope="row"><%= player.username %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>

</table>